journal = {Journal of Chemical Physics},
number = {20},
pages = {8910--8922},
pmid = {86851200022},
primaryClass = {http:},
title = {{A five-site model for liquid water and the reproduction of the density anomaly by rigid, nonpolarizable potential functions}},
volume = {112},
year = {2000}
}
