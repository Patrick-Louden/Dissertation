journal = {J. Geophys. Res.-Oceans},
keywords = {doi:10.102,http://dx.doi.org/10.1029/2011JC006969},
number = {11},
pages = {1--13},
title = {{Frictional sliding across Coulombic faults in first-year sea ice: A comparison with freshwater ice}},
volume = {116},
year = {2011}
}
