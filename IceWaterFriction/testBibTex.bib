doi = {10.1073/pnas.1612893114},
file = {:Users/plouden/Documents/Papers/S{\'{a}}ncheza2017.pdf:pdf},
issn = {0027-8424},
journal = {Proc. Natl. Acad. Sci. U.S.A.},
number = {2},
pages = {227--232},
pmid = {27956637},
title = {{Experimental and theoretical evidence for bilayer-by-bilayer surface melting of crystalline ice}},
url = {http://www.pnas.org/lookup/doi/10.1073/pnas.1612893114},
volume = {114},
year = {2017}
}
@article{Groenzin2007,
